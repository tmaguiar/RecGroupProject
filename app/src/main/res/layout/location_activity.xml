<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/title_locationlist"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/loc_id"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="25sp" />

        <TextView
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/loc_name"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="25sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/loc_desc"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="25sp"
            android:layout_weight="0.37" />

    </LinearLayout>

    <ListView
        android:id="@+id/location_listview"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:textColor="#ff0066"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/goback1_btn"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:text="@string/back"
            android:textSize="20sp"
            android:layout_weight="0.25" />

    </LinearLayout>

</LinearLayout>



